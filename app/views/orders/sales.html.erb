<h2>Sales</h2>

<div class="center">
  <div class="row">
    <table class="table table-striped table-bordered">
      <tr>
        <th class="center">Image</th>
        <th class="center">Item</th>
        <th class="center">Price</th>
        <th class="center">Customer</th>
        <th class="center">Date Sold</th>
      </tr>
      <% @orders.each do |order| %>
        <tr>
          <th class="center"><%= link_to image_tag(order.listing.image, size: "200x150", alt: "Order Entry"), order.listing %>
          </th>
          <th class="center"><%= order.listing.name %></th>
          <th class="center"><%= number_to_currency(order.listing.price) %> </th>
          <th class="center"><%= order.buyer.name %> </th>
          <th class="center"><%= order.created_at.strftime("%B %-d, %Y") %></th>
        </tr>
      <% end %>
    </table>
  </div>
</div>
