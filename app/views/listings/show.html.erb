<div class="row">
	<div class="col-md-6 p-4">
		<div class="thumbnail">
			<%= image_tag url_for(@listing.image) %>
		</div>
	</div>
	<div class="col-md-6 flex-middle">
		<h2>
      <strong>Name:</strong>
      <%= @listing.name %>
		</h2>

		<p>
		  <strong>Description:</strong>
		  <%= @listing.description %>
		</p>

		<p>
		  <strong>Price:</strong>
		  <%= number_to_currency(@listing.price) %>
		</p>
	</div>
</div>

<% if current_user == @listing.user %>
	<%= link_to 'Edit', edit_listing_path(@listing), class: "badge badge-dark"  %> |
<% end %>

<%= link_to 'Back', listings_path, class: "badge badge-dark" %>

